// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id() @default(uuid())
  login       String
  email       String  @unique
  phoneNumber String
  password    String
  role        String?

  advertisments Advertisment[]

  avatar Image[]

  createdAt DateTime @default(now())
  imageId   String?
}

model Image {
  id       String @id @default(uuid())
  content  Bytes
  fileType String

  advertisment   Advertisment? @relation(fields: [advertismentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  advertismentId String?
  user           User?         @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId         String?
}

model Advertisment {
  creator User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  id     String @id() @default(uuid())
  userId String

  cost        Float
  currency    String
  description String @default("")

  brand        String
  model        String
  year         Int
  generation   String?
  mileage      Int?
  engineType   String?
  engineVolume Float?
  transmission String?
  body         String?

  imageIds Image[]

  createdAt DateTime @default(now())
}
